<%= simple_form_for(booking, url: product_bookings_path(params[:id]), html: { class: "form-container p-4 bg-white rounded" }) do |f| %>
  <div class="form-group d-none">
    <%= f.input :product_id, as: :hidden, input_html: { value: params[:product_id] } %>
  </div>
  <h2 class="mb-4">Choisissez votre plage de dates</h2>


  <div data-controller="datepicker">
    <div class="mb-4">
    <p class="fs-4 fw-bold">
      <span data-datepicker-target="price" class="color-orange"> <%= price %>€</span>
    </p>
    <p>
      <span data-datepicker-target="slot">TTC / jour</span>
    </p>
    </div>

    <div  class="mb-4">
      <div class="mb-3">
        <%= f.hidden_field :bookings_dates, value: bookings_dates, data: { datepicker_target: "bookingsDates" } %>
        <%= f.label :start_date, "Date de début location", class: "form-label fw-bold" %>
        <%= f.text_field :start_date, as: :string, class: "form-control", value: start_date, placeholder: "Choisissez une date", data: { datepicker_target: "startDate" } %>
      </div>

      <div class="mb-3">
        <%= f.label :end_date, "Date de fin location", class: "form-label fw-bold" %>
        <%= f.text_field :end_date, as: :string, class: "form-control", value: end_date, placeholder: "Choisissez une date", data: { datepicker_target: "endDate" } %>
      </div>

      <div class="mb-4">
        <%= f.hidden_field :price_per_day, value: price, data: { datepicker_target: "pricePerDay" } %>
        <%= f.hidden_field :amount, value: price, data: { datepicker_target: "amount" } %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Réserver", class: "btn btn-primary btn-lg w-100" %>
    </div>
  </div>
<% end %>
