<%= simple_form_for :search, url: search_products_path, method: :get do |f| %>
  <%= f.input :name, label: "Rechercher un produit", placeholder: "Nom du produit" %>
  <%= f.input :address, label: "Ville", placeholder: "Lille, Paris..." %>
  <%= f.button :submit, "Rechercher" %>
<% end %>


<% if @products.any? %>
  <h2>Produits trouvés :</h2>
  <ul>
    <% @products.each do |product| %>
      <li>
        <%= link_to product_path(product), class: "text-decoration-none" do %>
          <strong><%= product.name %> (<%= product.id %>)</strong><br>
        <% end %>
        Lieu : <%= product.owner.address || "Adresse inconnue" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>Aucun produit trouvé pour cette recherche.</p>
<% end %>
