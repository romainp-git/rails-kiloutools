<div class="products">
  <div class="left-container">
    <%= render "product_search_form" %>

    <div class="products-grid p-3">
      <% if @products.any? %>
          <p><strong><%= @products.size %></strong> produit(s) trouvé(s)</p>
          <%= render 'shared/grid_offers', products: @products%>
      <% else %>
        <p>Aucun produit trouvé pour cette recherche.</p>
      <% end %>
    </div>
  </div>

  <div class="right-container">
    <div class="map" id="map" data-controller="map"
      data-map-api-key-value='<%= ENV["MAPBOX_API_KEY"] %>'
      data-map-markers-value='<%= raw @markers.to_json %>'>
    </div>
  </div>
</div>
