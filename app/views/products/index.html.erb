<div class="products">
  <div class="left-container">
    <div class="border-bottom border-1 p-4 w-100">
      <div class="container">
        <%= render "shared/product_search_form" %>
      </div>
    </div>

    <% if @products.any? %>
      <div class="mt-3 p-3">
        <h3>Produits trouvés :</h3>
        <%= render 'shared/grid_offers', products: @products%>
      </div>
    <% else %>
      <p>Aucun produit trouvé pour cette recherche.</p>
    <% end %>
  </div>

  <div class="right-container">
    <div class="map" id="map" data-controller="map"
      data-map-api-key-value='<%= ENV["MAPBOX_API_KEY"] %>'
      data-map-markers-value='<%= raw @markers.to_json %>'>
    </div>
  </div>
</div>
