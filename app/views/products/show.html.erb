<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this item?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <%= button_to "Delete", product_path(@product), method: :delete, class: "btn btn-danger", form: { id: "deleteForm" } %>
      </div>
    </div>
  </div>
</div>


<%# START OF THE VIEW =============================================== %>

<div class="container">
  <div class="row align-items-center pb-4">
    <div class="col-6">
      <h1><%= @product.name %> (<%= @product.id %>)</h1>
      <p><strong>Description:</strong> <%= @product.description %></p>
      <p><strong>State:</strong> <%= @product.state %></p>
      <p><strong>Model:</strong> <%= @product.model %></p>
      <p><strong>Price:</strong> <%= @product.price %> â‚¬</p>
      <p><strong>Brand:</strong> <%= @product.brand.name %></p>
      <p><strong>Category:</strong> <%= @product.category.name %></p>
      <p><strong>Owner:</strong> <%= @product.owner.username %></p>
      <p><strong>Latitude:</strong> <%= @product.latitude %></p>
      <p><strong>Longitude:</strong> <%= @product.longitude %></p>
    </div>
    <div class="col-6">
      <div class="product-image">
        <% if @product.photo_url.present? %>
          <%= image_tag @product.photo_url, class: "mx-auto d-block", alt: "#{@product.name}", onerror: "this.onerror=null;this.src='#{asset_path('no_picture.jpg')}';" %>
        <% else %>
          <%= image_tag 'no_picture.jpg', class: "mx-auto d-block", alt: "No picture available" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container form-group mt-3 mb-5 pt-0">
  <%= link_to "Cancel", products_path, class: "btn btn-secondary" %>
  <%= link_to "Edit", edit_product_path(@product), class: "btn btn-primary" %>
  <% if @product.can_be_destroyed? %>
    <%= link_to "Delete", "#", class: "btn btn-danger text-white", data: { bs_toggle: "modal", bs_target: "#deleteModal" } %>
  <% end %>
</div>
