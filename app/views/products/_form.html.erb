<div class="container">
  <div class="row align-items-center pb-4">
    <div class="col-6">
      <h1><%= @fTitle %></h1>

      <%= simple_form_for @product do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :state %>
          <%= f.input :model %>
          <%= f.input :photo %>
          <%= f.input :price %>
          <%= f.association :brand %>
          <%= f.association :category %>
          <%= f.input :latitude %>
          <%= f.input :longitude %>
        </div>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>

    </div>
  </div>
</div>
